<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lestBackground"
    tools:context=".activities.SpashActivity">

    <RelativeLayout
        android:id="@+id/centeral_layout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/elipse">

        <ImageView
            android:id="@+id/final_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/final_logo" />
    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/centeral_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_name" />
</RelativeLayout>